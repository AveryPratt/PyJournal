<html>
    <head>
        <link href="theme.css" type="text/css" rel="stylesheet">
    </head>
    <body>
        <header>
            <h1>PyJournal</h1>
            <nav>
                <ul>
                    <li><a href="{{ request.route_url('home') }}"><h3>Home</h3></a></li>
                    <li><a href="{{ request.route_url('detail') }}"><h3>Detail</h3></a></li>
                    <li><a href="{{ request.route_url('create') }}"><h3>Create New Entry</h3></a></li>
                    <li><a href="{{ request.route_url('update') }}"><h3>Edit Entry</h3></a></li>
                </ul>
            </nav>
        </header>
        <article>
        <h2>Entries:</h2>
        {% if entries %}
            <ul>
            {% for entry in entries %}
                <li>
                    <h3><a href="{{ request.route_url('detail', id=entry.id) }}">{{ entry.title }}</a></h3>
                    <p>Created {{ entry.date }}</p>
                </li>
            {% endfor %}
            </ul>
        {% else %}
            <p>This journal has no entries!</p>
        {% endif %}
        </article>
        <footer>

        </footer>
    </body>
</html>